<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl608202231.mocha.SignUp">

    <EditText
        android:id="@+id/etuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etpass"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true" />

    <EditText
        android:id="@+id/etpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/etup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etpass"
        android:layout_alignLeft="@+id/etpass"
        android:layout_alignRight="@+id/etpass"
        android:layout_alignStart="@+id/etpass"
        android:layout_below="@+id/etpass"
        android:layout_marginTop="16dp"
        android:text="Sign Up"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etup"
        android:layout_alignTop="@+id/etpass"
        android:layout_toLeftOf="@+id/etpass"
        android:layout_toStartOf="@+id/etpass"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etpass"
        android:layout_alignTop="@+id/etuser"
        android:layout_toStartOf="@+id/etuser"
        app:srcCompat="@drawable/ic_account_box_black_24dp" />

    <TextView
        android:id="@+id/tvready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etup"
        android:layout_alignRight="@+id/etup"
        android:layout_below="@+id/etup"
        android:text="Click here"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/etuser"
        android:layout_alignRight="@+id/etuser"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/mocha1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10"
        android:layout_below="@+id/etup"
        android:text="Already have an Account?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
