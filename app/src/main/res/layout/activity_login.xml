<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmain"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl608202231.mocha.Login">


    <EditText
        android:id="@+id/etuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:ems="10"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/etpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etuser"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/etin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etpass"
        android:layout_alignLeft="@+id/etpass"
        android:layout_alignRight="@+id/etpass"
        android:layout_alignStart="@+id/etpass"
        android:layout_below="@+id/etpass"
        android:layout_marginTop="16dp"
        android:text="Sign In" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etin"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/etpass"
        android:layout_toLeftOf="@+id/etpass"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etpass"
        android:layout_alignTop="@+id/etuser"
        android:layout_toLeftOf="@+id/etuser"
        app:srcCompat="@drawable/ic_account_box_black_24dp" />

    <TextView
        android:id="@+id/tvready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etin"
        android:layout_alignRight="@+id/etin"
        android:layout_below="@+id/etin"
        android:text=" Click here"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView2"
        android:layout_alignEnd="@+id/etuser"
        android:layout_alignRight="@+id/etuser"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/mocha1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etin"
        android:layout_alignStart="@+id/etin"
        android:layout_below="@+id/etin"
        android:layout_toLeftOf="@+id/tvready"
        android:layout_toStartOf="@+id/tvready"
        android:text="Dont Have an Account ?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="13sp" />

</RelativeLayout>
